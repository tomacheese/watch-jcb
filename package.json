{
  "name": "watch-jcb",
  "version": "2.0.0",
  "description": "Notify new campaign information added to the JCB Card campaign list page via Discord.",
  "homepage": "https://github.com/tomacheese/watch-jcb",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-jcb/issues"
  },
  "license": "MIT",
  "author": "Tomachi",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tomacheese/watch-jcb.git"
  },
  "scripts": {
    "generate-schema": "typescript-json-schema --required tsconfig.json Configuration -o schema/Configuration.json",
    "test": "jest",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.9.15",
    "@types/cheerio": "1.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "22.15.33",
    "axios": "1.10.0",
    "cheerio": "1.1.0",
    "eslint": "9.29.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.20.0",
    "eslint-plugin-promise": "7.2.1",
    "iconv-lite": "0.6.3",
    "jest": "30.0.3",
    "prettier": "3.6.1",
    "run-z": "2.1.0",
    "ts-jest": "29.4.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-json-schema": "0.65.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1"
    },
    "transform": {
      ".+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.12.3+sha512.467df2c586056165580ad6dfb54ceaad94c5a30f80893ebdec5a44c5aa73c205ae4a5bb9d5ed6bb84ea7c249ece786642bbb49d06a307df218d03da41c317417",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
